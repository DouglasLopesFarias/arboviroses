<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="113dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Id:" />

            <TextView
                android:id="@+id/txvIdLocalidadeLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Descrição:" />

            <TextView
                android:id="@+id/txvDescricaoLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Douglas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Categoria:" />

            <TextView
                android:id="@+id/txvCategoriaLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Douglas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Zona:" />

            <TextView
                android:id="@+id/txvZonaLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Douglas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:text="Extrago:" />

            <TextView
                android:id="@+id/txvExtratoLocalidadeLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Douglas" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>